<MudDialog>
    <DialogContent>
        <ErrorViewer Error="@_error" />
        <EditForm Model="_request" OnInvalidSubmit="OnInvalidSubmit" OnValidSubmit="OnValidSubmit">
            <FluentValidationValidator />
            <MudGrid>
                <MudItem xs="12">
                    <MudItem xs="12">
                        <MudAutocomplete T="AddShowCommand_Movie"
                                         Label="@DisplayTextFor.Movie"
                                         SearchFunc="@SearchMovie"
                                         @bind-Value="_request.Movie"
                                         ToStringFunc="@(x => x is null ? null : x.Title)"
                                         ResetValueOnEmptyText="true"
                                         CoerceText="true" 
                                         CoerceValue="true"
                                         Clearable="true" />
                    </MudItem>
                </MudItem>
                <MudItem xs="12">
                    <MudTimePicker Label="@DisplayTextFor.Time" @bind-Time="_time" />
                </MudItem>
                <MudItem xs="12">
                    <MudDatePicker Label="@DisplayTextFor.Date" Editable="true" @bind-Date="_date" Placeholder="Select Date" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField Label="@DisplayTextFor.TicketPrice" @bind-Value="_request.TicketPrice" />
                </MudItem>
            </MudGrid>
            <MudPaper Elevation="0" Class="mt-8 text-right">
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">@CommonDisplayTextFor.Submit</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Dark" OnClick="Cancel">@CommonDisplayTextFor.Cancel</MudButton>
            </MudPaper>
        </EditForm>
    </DialogContent>
</MudDialog>
