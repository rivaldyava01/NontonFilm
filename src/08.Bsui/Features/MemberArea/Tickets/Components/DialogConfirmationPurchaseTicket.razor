<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="6">
                <MudField Label="@DisplayTextFor.MovieTitle">@Request.MovieTitle</MudField>
            </MudItem>
            <MudItem xs="6">
                <MudField Label="@DisplayTextFor.Studio">@Request.StudioName</MudField>
            </MudItem>
            <MudItem xs="6">
                <MudField Label="@DisplayTextFor.DateTimeShow">@Request.ShowDateTime</MudField>
            </MudItem>
            <MudItem xs="6">
                <MudField Label="@DisplayTextFor.SeatCode">@Request.SeatCodes</MudField>
            </MudItem>
            <MudItem xs="6">
                <MudField Label="@DisplayTextFor.TotalTicketPrice">@Request.TicketPrice.ToCurrency0DisplayText().ToString()</MudField>
            </MudItem>
        </MudGrid>
        <MudPaper Elevation="0" Class="mt-8 text-right">
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit">@CommonDisplayTextFor.Submit</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Dark" OnClick="Cancel">@CommonDisplayTextFor.Cancel</MudButton>
        </MudPaper>
    </DialogContent>
</MudDialog>
